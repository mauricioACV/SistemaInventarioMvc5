
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>Login</title>

    <!-- Normalize V8.0.1 -->
    <link href="~/Vendors/css/normalize.css" rel="stylesheet" />

    <!-- Bootstrap V4.3 -->
    <link href="~/Vendors/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Material Design V4.0 -->
    <link href="~/Vendors/css/bootstrap-material-design.min.css" rel="stylesheet" />

    <!-- Font Awesome V5.9.0 -->
    <link href="~/Vendors/css/all.css" rel="stylesheet" />

    <!-- Sweet Alerts V8.13.0 CSS file -->
    <link href="~/Vendors/css/sweetalert2.min.css" rel="stylesheet" />

    <!-- Sweet Alert V8.13.0 JS file -->
    <script src="~/Vendors/js/sweetalert2.min.js"></script>

    <!-- jQuery Custom Content Scroller V3.1.5 -->
    <link href="~/Vendors/css/jquery.mCustomScrollbar.css" rel="stylesheet" />

    <!-- General Styles -->
    <link href="~/Vendors/css/style.css" rel="stylesheet" />
</head>
<body>

    <div class="login-container">
        <div class="login-content">
            <p class="text-center">
                <i class="fas fa-user-circle fa-5x"></i>
            </p>
            <p class="text-center">
                Inicia sesión con tu cuenta
            </p>
            <form action="@Url.Content("~/Acceso/Login")" method="post">
                <div class="form-group">
                    <label for="UserName" class="" style="color:black !important"><i class="fas fa-user-secret"></i> &nbsp; Usuario</label>
                    <input type="text" class="form-control" id="User" name="User" pattern="[a-zA-Z0-9]{1,35}" maxlength="35">
                </div>
                <div class="form-group">
                    <label for="UserPassword" class="" style="color:black !important"><i class="fas fa-key"></i> &nbsp; Contraseña</label>
                    <input type="password" class="form-control" id="Pass" name="Pass" maxlength="200">
                </div>
                <input type="submit" value="Acceder" class="btn-login text-center" />
            </form>
        </div>
    </div>


    <!--=============================================
    =            Include JavaScript files           =
    ==============================================-->
    <!-- jQuery V3.4.1 -->
    <script src="~/Vendors/js/jquery-3.4.1.min.js"></script>

    <!-- popper -->
    <script src="~/Vendors/js/popper.min.js"></script>

    <!-- Bootstrap V4.3 -->
    <script src="~/Vendors/js/bootstrap.min.js"></script>

    <!-- jQuery Custom Content Scroller V3.1.5 -->
    <script src="~/Vendors/js/jquery.mCustomScrollbar.concat.min.js"></script>

    <!-- Bootstrap Material Design V4.0 -->
    <script src="~/Vendors/js/bootstrap-material-design.min.js"></script>
    <script>$(document).ready(function () { $('body').bootstrapMaterialDesign(); });</script>

    <script src="./js/main.js"></script>
</body>
</html>